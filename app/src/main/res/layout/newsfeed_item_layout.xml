<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="4dp"
        android:padding="16dp"
        >
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:gravity="center_vertical"
           >
           <de.hdodenhof.circleimageview.CircleImageView
               android:layout_width="48dp"
               android:layout_height="50dp"
               android:src="@drawable/hzulogo"
               />

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               >
               <TextView
                   android:layout_width="200dp"
                   android:layout_height="wrap_content"
                   android:text="Himgiri Zee University"
                   android:layout_marginLeft="16dp"
                   android:textSize="18sp"
                   android:textColor="@color/black"
                   android:fontFamily="serif"
                   />

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="16dp"
                   android:orientation="horizontal"
                   >
                   <TextView
                       android:id="@+id/date"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text=" 22 aug 2020 "
                       android:fontFamily="sans-serif-light"
                       android:textSize="@dimen/text_size01"
                       android:textColor="@color/black"
                       />

                    <TextView
                        android:id="@+id/time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="12:00 AM"
                        android:fontFamily="sans-serif-light"
                        android:textSize="@dimen/text_size01"
                        android:textColor="@color/black"
                       />

               </LinearLayout>

           </LinearLayout>


       </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/noticeTitle"
            android:layout_marginVertical="5dp"
            android:text="Hello,Demo text title so don't read it and waste you'r time ok!"
            android:textSize="18sp"
            android:fontFamily="serif"
            android:textColor="@color/black"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height=".5dp"
            android:background="#9D9B9B"
            />


        <ImageView
            android:id="@+id/noticeImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_margin"
            android:scaleType="fitCenter" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#9D9B9B"
        />


</com.google.android.material.card.MaterialCardView>